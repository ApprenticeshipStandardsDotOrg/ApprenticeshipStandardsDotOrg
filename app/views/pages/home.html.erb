<section aria-label="hero section" class="occ-hero bg-no-repeat bg-cover bg-center bg-gray-700">
  <%= render partial: "layouts/nav" %>

  <div class="px-4 py-8 mx-auto lg:py-16">

    <div class="container mx-auto grid items-center gap-8 lg:gap-12 lg:grid-cols-12">
      <div class="col-span-6">
        <%= image_tag("icon-illustration.png", alt: "An illustration of industry-related icons") %>
      </div>
      <div class="col-span-6 text-center sm:mb-6 lg:text-left lg:mb-0">
        <h1 class="px-4 mb-3 text-3xl font-bold leading-none tracking-tight text-gray-100 md:text-4xl xl:text-5xl">Jumpstart Your Apprenticeship with the Registered Apprenticeship Standards Library</h1>
        <!-- <p class="max-w-xl mx-auto mb-6 font-light text-gray-500 lg:mx-0 xl:mb-8 md:text-lg xl:text-xl">Here we can include a subtitle to accompany the header text</p> -->
        <div class="max-w-lg lg:ml-0 mx-auto">
          <%= render partial: "shared/search_form", locals: {show_filter: false} %>
        </div>
      </div>
    </div>
  </div>
</section>
<% if Flipper.enabled?(:updated_home) %>
