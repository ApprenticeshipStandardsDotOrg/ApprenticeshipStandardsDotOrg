<div class="w-full max-w-prose">
  <%= form_with model: @standards_import, class: "bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4" do |f| %>
    <div class="mb-4">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-field" %>
    </div>
    <div class="mb-4">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-field" %>
    </div>
    <div class="mb-4">
      <%= f.label :organization, class: "form-label" %>
      <%= f.text_field :organization, class: "form-field" %>
    </div>
    <div class="mb-4">
      <%= f.label :notes, class: "form-label" %>
      <%= f.text_area :notes, class: "form-field" %>
    </div>
    <div class="mb-6">
      <%= f.label :files, class: "form-label" %>
      <%= f.file_field :files, multiple: true, class: "form-field" %>
    </div>
    <div>
      <%= f.submit nil, class: "btn-primary" %>
    </div>
  <% end %>
</div>
