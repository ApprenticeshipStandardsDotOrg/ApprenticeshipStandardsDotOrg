<% content_for(:title) { t("administrate.actions.edit_resource", name: page.page_title) } %>

<header class="main-content__header" role="banner">
  <h1 id="title_id" class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>

  <%= content_for(:header_middle) %>

  <div>
    <%= if accessible_action?(page.resource, :show)
          link_to(
            t("administrate.actions.show_resource", name: page.page_title),
            admin_import_data_import_path(page.resource.import, page.resource),
            class: "button"
          )
        end %>
  </div>

  <%= content_for(:header_last) %>
</header>

<%= content_for(:before_main) %>

<% if content_for?(:main) %>
<%= content_for(:main) %>
<% else %>
<section aria-labelledby="title_id" class="main-content__body">
  <%= render "form", page: page, url: admin_import_data_import_path(page.resource.import, page.resource) %>
</section>
<% end %>

<%= content_for(:after_main) %>
