<% content_for(:title) do %>
  <% if Flipper.enabled?(:show_imports_in_administrate) %>
    <%= "Import data for pdf file: #{@import.filename}" %>
  <% else %>
    <%= "Import data for source file: #{@source_file.filename}" %>
  <% end %>
<% end %>

<header class="main-content__header" role="banner">
  <h1 id="title_id" class="main-content__page-title">
    <%= content_for(:title) %>
  </h1>

  <div>
    <%= link_to t("administrate.actions.back"), :back, class: "button" %>
  </div>
</header>

<section aria-labelledby="title_id" class="main-content__body">
  <% if Flipper.enabled?(:show_imports_in_administrate) %>
    <%= render "form_new", page: page %>
  <% else %>
    <%= render "form", page: page %>
  <% end %>
</section>
