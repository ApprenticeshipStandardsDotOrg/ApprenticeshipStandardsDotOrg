<% content_for(:title) do %>
  <%= "Docs" %>
<% end %>

<header class="main-content__header">
  <h1 class="main-content__page-title" id="page-title">
    <%= content_for(:title) %>
  </h1>
</header>

<section class="main-content__body main-content__body--flush">
  <div class="main-content__page-description ml-6">
    <h2 id="optionsForImportsSearch" class="font-bold">What are the options for Imports search?</h2>
    <div class="mt-2">
      By status:
      <ul>
        <li><code>status:pending</code><i>
        <li><code>status:completed</code><i>
        <li><code>status:needs_support</code><i>
        <li><code>status:needs_human_review</code><i>
        <li><code>status:archived</code><i>
        <li><code>status:needs_backend_support</code><i>
        <li><code>status:unfurled</code><i>
      </ul>
    </div>

    <div class="mt-2">
      By asignee name:
      <ul>
        <li><code>asignee:John</code><i>
      </ul>
    </div>

    <div class="mt-2">
      By organization:
      <ul>
        <li><code>organization:urban</code><i>
      </ul>
    </div>

    <div class="mt-2">
      By public document status:
      <ul>
        <li>public_document:true</code><i>
        <li>public_document:false</code><i>
      </ul>
    </div>

    <div class="mt-2">
      By file name or extension:
      <ul>
        <li>file:pdf</code><i>
      </ul>
    </div>

    <div class="mt-2">
      Only files that need redaction:
      <ul>
        <li>needs_redaction:</code><i>
      </ul>
    </div>

    <div class="mt-2">
      Only files that are already redacted:
      <ul>
        <li>already_redacted:</code><i>
      </ul>
    </div>
  </div>
  <hr />
</section>
