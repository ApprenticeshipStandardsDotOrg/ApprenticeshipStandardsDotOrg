<%= form_with url: search_form_url, method: :get, data: {
      controller: "search typeahead"
    } do |f| %>
  <%= f.label :q, "Search term", class: "mb-2 text-sm font-medium text-white sr-only" %>
  <div class="flex px-4 pt-4">
    <%= f.search_field :q,
          value: params[:q],
          class: "text-gray-900 bg-gray-50",
          placeholder: "Search by occupation name, O*NET, or industry",
          autocomplete: :off,
          data: {
            search_target: "textField",
            typeahead_target: "input"
          } %>
    <%= f.button name: nil, class: "flex-none text-white inline-flex items-center bg-seafoam-700 hover:bg-seafoam-800 focus:ring-4 focus:outline-none focus:ring-primary-300 font-medium text-sm px-4 py-2", id: "search" do %>
      <svg aria-label="search icon" class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg"><path fill-rule="evenodd" d="M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z" clip-rule="evenodd"></path></svg>
    <% end %>
  </div>
  <% if show_filter %>
    <%= render partial: "shared/search_filters", locals: {f: f} %>
  <% end %>
<% end %>
