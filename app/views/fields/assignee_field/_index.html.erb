<% if field.data %>
  <% if accessible_action?(field.data, :show) %>
    <%= link_to(
      field.display_associated_resource,
      [namespace, field.data],
    ) %>
  <% else %>
    <%= field.display_associated_resource %>
  <% end %>
<% else %>
  <%= button_to "Claim",
    admin_source_file_path(field.resource),
    params: {source_file: {assignee_id: current_user.id}},
    method: :patch,
    class: "button",
    form_class: "form-button"
  %>
<% end %>
